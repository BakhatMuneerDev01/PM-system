{
    "version": 2,
    "buildCommand": "npm install && npm run build --prefix client",
    "installCommand": "npm install",
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/build"
            }
        },
        {
            "src": "server/api.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/api.js"
        },
        {
            "src": "/(.*)",
            "dest": "client/build/$1"
        }
    ]
}